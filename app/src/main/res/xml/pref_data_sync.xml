<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- A 'parent' preference, which enables/disables child preferences (below)
         when checked/unchecked. -->
    <PreferenceCategory
        android:title="Syncing Options">
        <SwitchPreference

            android:key="auto_download"
            android:title="Auto Download Of Files"
            android:defaultValue="true"
            android:summary="This will help you have check on your mobile data"/>
        <SwitchPreference
            android:key="auto_upload"
            android:title="Auto Upload Files"
            android:defaultValue="true" />
    </PreferenceCategory>
</PreferenceScreen>
